// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  email String @id
  keyId String
}

model PasskeyUser {
  id              String  @id
  publicKey       String
  name            String //to the platform or operating system information of the user's device
  transports      String //actually an array but needed to be stored as a string
  registered      BigInt //the time the user registered the device
  last_used       BigInt? //the time the user last used the device
  counter         Int     @default(0)
  encryptedShares String //the encryption of the JSON.stringify of the shares
  keyId           String  @default("")
}
